<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обчислення s" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введіть значення x:"/>
            <TextBox Name="xTextBox"/>
            <TextBlock Text="Введіть значення y:"/>
            <TextBox Name="yTextBox"/>
            <TextBlock Text="Введіть значення z:"/>
            <TextBox Name="zTextBox"/>
            <Button Content="Обчислити s" Click="CalculateButton_Click"/>
            <TextBlock Name="resultText" Margin="0,20,0,0" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
